signal { int nodeType; real battery; real temperature; }
space { edges { int hop; real dist; } }
domain boolean;
formula ReachFormula = ( nodeType==3 ) reach (hop)[0, 2] ( nodeType==2 ) ;
formula ParametricReachFormula (int k, int tp) = ( nodeType==3 ) reach (hop)[0, k] ( nodeType== tp) ;
formula SomeWhereFormula = somewhere(dist)[0,3] ( battery > 0.5);
formula EscapeMon = escape(hop)[3, 5] ( nodeType==3) ;
formula SensTemp = somewhere(hop)[0, 3]{globally [0, 0.2]  (  battery > 0.5 )};
             